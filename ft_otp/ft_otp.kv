#:kivy 1.0.9
<MainWindow>:
        orientation: "vertical"
        padding: "10dp"
        spacing: "10dp"
        label: label
        progress_bar: progress_bar
        canvas.before:
                Color:
                        rgba: 0.1, 0.42, 0.1, 0.42
                Rectangle:
                        size: self.size
                        pos: self.pos

        BoxLayout:
                orientation: "vertical"
                size_hint_y: None
                height: self.minimum_height

        MyLabel:
                id: label
                text: "--- ---"
                size_hint_y: None
                height: "40dp"
                font_size: "42sp"
                halign: "center"
                valign: "middle"
                text_size: self.size

        ProgressBar:
                id: progress_bar
                max: 100
                value: 0
                size_hint_y: None
                height: "20dp"

        MyButton:
                text: "Generate OTP"
                size_hint_y: None
                height: "40dp"
                font_size: "20sp"
                on_press: self.parent.generate_otp()
